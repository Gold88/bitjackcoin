#!/usr/bin/make -f
# -*- mode: makefile; coding: utf-8 -*-

#DEB_MAKE_CHECK_TARGET = test_bitjackcoin
#build/bitjackcoind::
#	$(if $(filter nocheck,$(DEB_BUILD_OPTIONS)),,src/test_bitjackcoin)

DEB_INSTALL_EXAMPLES_bitjackcoind += debian/examples/*
DEB_INSTALL_MANPAGES_bitjackcoind += debian/manpages/*

%:
	dh --with bash-completion $@

override_dh_auto_build:
	cd src; $(MAKE) -f makefile.unix USE_IPV6=1 USE_QRCODE=1 USE_UPNP=0 bitjackcoind
	$(MAKE)

override_dh_auto_clean:
	if [ -f Makefile ]; then $(MAKE) clean; else rm -rf build/; rm -f bitjackcoin-qt; fi
	cd src; $(MAKE) -f makefile.unix clean

override_dh_auto_configure:
	qmake bitjackcoin-qt.pro USE_QRCODE=1 USE_DBUS=1

override_dh_auto_test:
	#cd src; $(MAKE) -f makefile.unix test_bitjackcoin
	#src/test_bitjackcoin

# Ensure wrapper is set executable
binary-post-install/bitjackcoind:
	chmod +x $(cdbs_curdestdir)usr/bin/bitjackcoind
binary-post-install/bitjackcoin-qt:
	chmod +x $(cdbs_curdestdir)usr/bin/bitjackcoin-qt
